<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Orderticket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        
        <item name="orderTicketStyle">@style/OrderTicketView</item>
    </style>


    <style name="OrderTicketView">
        <item name="free_seat_background">@color/light_green</item>
        <item name="ordered_seat_background">@color/pink</item>
        <item name="not_available_seat_background">@color/gray</item>
        <item name="issued_seats_background">@color/light_cyan</item>
    </style>
</resources>